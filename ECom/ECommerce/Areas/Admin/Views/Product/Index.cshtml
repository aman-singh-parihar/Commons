@model List<Product>
<div class="row">
    <partial name="_NotificationPartial"></partial>
</div>
<div class="row">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-lg-6">
                    <h1>Product List</h1>
                </div>
                <div class="col-lg-6 text-lg-end">
                    <a class="btn btn-success" asp-area="Admin" asp-controller="Product" asp-action="UpSert"><i class="bi bi-plus-circle"></i>&nbsp;Create</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">ISBN</th>
                        <th scope="col">Author</th>
                        <th scope="col">ListPrice</th>
                        <th scope="col">Category</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Title</td>
                            <td>@product.Description</td>
                            <td>@product.ISBN</td>
                            <td>@product.Author</td>
                            <td>@product.ListPrice</td>
                            <td>@product.Category.CategoryName</td>
                            <td>
                                <a class="btn btn-primary" asp-area="Admin" asp-controller="Product" asp-action="UpSert" asp-route-id=@product.Id><i class="bi bi-pencil-square"></i>&nbsp;Edit</a>
                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id=@product.Id><i class="bi bi-trash-fill"></i>&nbsp;Delete</a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


