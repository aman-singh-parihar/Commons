@model Category

<div class="row justify-content-md-center">
    <div class="col-lg-8 col-md-10 col-sm-11 col-xs-12">
        <div class="card">
            <div class="card-header text-center">
                <h1>Update Category</h1>
            </div>
            <div class="card-body">
                <form asp-action="Delete" asp-controller="Category">
                    <div class="mb-3">
                        <label asp-for="CategoryName" class="form-label"></label>
                        <input asp-for="CategoryName" class="form-control" disabled/>
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DisplayOrder" class="form-label"></label>
                        <input asp-for="DisplayOrder" class="form-control" disabled/>
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill"></i>&nbsp;Delete</button>
                        <a asp-controller="Category" class="btn btn-primary" asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>